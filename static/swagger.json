{
  "openapi": "3.0.1",
  "info": {
    "title": "Middleware Integração Imobiliária",
    "summary": "Middleware...",
    "description": "Esse Middleware é utilizado para salvar dados de diversas imobiliárias...",
    "contact": {
      "email": "csdamo@ucs.br"
    },
    "version": "1.0.0"
  },
  "externalDocs": {
    "description": "Relatório",
    "url": "https://docs.google.com/document/d/1i2txTpmApRxXQJ_6k5J-eZmU5q_L64zft-BC5AImaQI/edit?usp=drive_link"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:5000",
      "description": "Ambiente local"
    }
  ],
  "tags": [
    {
      "name": "imobiliaria",
      "description": "Unidades de negócio parceiras"
    },
    {
      "name": "imovel",
      "description": "Imóveis negociados"
    }
  ],
  "paths": {
    "/imobiliaria": {
      "post": {
        "tags": [
          "imobiliaria"
        ],
        "summary": "Adiciona uma nova imobiliária",
        "description": "",
        "operationId": "addImobiliaria",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "requestBody": {
          "description": "Imobiliária a ser adicionada.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Imobiliaria"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Imobiliária criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Imobiliaria"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Imobiliaria"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida"
          }
        }
      }
    },
    "/imovel": {
      "post": {
        "tags": [
          "imovel"
        ],
        "summary": "Adiciona um novo imóvel",
        "description": "",
        "operationId": "addImovel",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Imóvel a ser adicionado",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Imovel"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Imóvel criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Imovel"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Imovel"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Imobiliaria": {
        "type": "object",
        "required": [
          "nome_fantasia",
          "razao_social",
          "cnpj",
          "telefone",
          "email"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "nome_fantasia": {
            "type": "string",
            "uniqueItems": true,
            "example": "Imobiliária Exemplo"
          },
          "razao_social": {
            "type": "string",
            "nullable": true,
            "example": "Razão Social Exemplo"
          },
          "cnpj": {
            "type": "string",
            "uniqueItems": true,
            "example": "0000000000000"
          },
          "telefone": {
            "type": "string",
            "example": "0000000000"
          },
          "email": {
            "type": "string",
            "example": "email@exemplo.com"
          }
        }
      },
      "Imovel": {
        "type": "object",
        "required": [
          "rua",
          "numero",
          "bairro",
          "cep",
          "cidade",
          "estado",
          "imobiliaria_id"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "aluguel": {
            "type": "boolean",
            "default": true,
            "example": true
          },
          "venda": {
            "type": "boolean",
            "default": true,
            "example": true
          },
          "tipo": {
            "type": "string",
            "enum": [
              "APARTAMENTO",
              "CASA",
              "TERRENO"
            ],
            "example": "APARTAMENTO"
          },
          "ativo": {
            "type": "boolean",
            "default": true,
            "example": true
          },
          "valor_venda": {
            "type": "number",
            "format": "float",
            "example": 500000.00
          },
          "valor_aluguel": {
            "type": "number",
            "format": "float",
            "example": 2000.00
          },
          "rua": {
            "type": "string",
            "example": "Rua Exemplo"
          },
          "numero": {
            "type": "string",
            "example": "123"
          },
          "bairro": {
            "type": "string",
            "example": "Bairro Exemplo"
          },
          "cep": {
            "type": "string",
            "example": "00000-000"
          },
          "cidade": {
            "type": "string",
            "example": "Cidade Exemplo"
          },
          "estado": {
            "type": "string",
            "example": "Estado Exemplo"
          },
          "imobiliaria_id": {
            "type": "integer",
            "example": 1
          }
        }
      }
    }
  }
}